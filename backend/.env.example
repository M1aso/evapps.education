# Example environment variables for development

# Auth Service
AUTH_DATABASE_URL=postgresql://user:password@localhost:5432/auth_db
JWT_SECRET=change_me
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=example_user
SMTP_PASSWORD=example_pass
SMS_API_TOKEN=your_sms_provider_token

# Profile Service
PROFILE_DATABASE_URL=postgresql://user:password@localhost:5432/profile_db

# Content Service
CONTENT_DATABASE_URL=postgresql://user:password@localhost:5432/content_db
OBJECT_STORAGE_ENDPOINT=https://storage.example.com
OBJECT_STORAGE_BUCKET=evapps-content
OBJECT_STORAGE_ACCESS_KEY=access_key
OBJECT_STORAGE_SECRET_KEY=secret_key

# Notification Service
NOTIFICATION_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/notification_db
REDIS_URL=redis://localhost:6379/0
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Chat Service
CHAT_DATABASE_URL=postgresql://user:password@localhost:5432/chat_db
CHAT_REDIS_URL=redis://localhost:6379/1

# Analytics Service
ANALYTICS_DATABASE_URL=postgresql://user:password@localhost:5432/analytics_db
# RABBITMQ_URL reused for analytics worker

# Common
LOG_LEVEL=info
PORT=8000
